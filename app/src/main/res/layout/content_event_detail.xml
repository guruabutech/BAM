<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="crescentcitydevelopment.com.bam.EventDetailActivity"
    tools:showIn="@layout/activity_event_detail">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <fragment
        android:id="@+id/eventDetailsMap"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        map:cameraBearing="112.5"
        map:cameraTargetLat="32.917302"
        map:cameraTargetLng="-96.909131"
        map:cameraTilt="65"
        map:cameraZoom="14" />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:background="@drawable/detail_divider"
         android:orientation="vertical">
            <TextView
                android:id="@+id/detailEventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="sans-serif"
                android:paddingLeft="40dp"
                android:paddingTop="10dp"
                android:text="Reaux's Birthday"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"/>
         <TextView
             android:id="@+id/detailEventDescription"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/colorPrimaryDark"
             android:fontFamily="sans-serif"
             android:paddingBottom="10dp"
             android:paddingLeft="40dp"
             android:text="Vacation in Colorado Springs."
             android:textColor="@color/colorWhite"
             android:textSize="18sp"/>
         <ScrollView
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:id="@+id/adminLayout"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@drawable/list_item_selector"
            android:clickable="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:src="@drawable/admin_icon"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
            <TextView
                android:id="@+id/detailEventAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                tools:text="Rhonda Sylvester"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Administrator"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

         <LinearLayout
             android:id="@+id/attendeeLayout"
             android:layout_width="match_parent"
             android:layout_height="72dp"
             android:background="@drawable/list_item_selector"
             android:clickable="true"
             android:orientation="horizontal"
             >
             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:paddingLeft="16dp"
                 android:paddingRight="16dp"
                 android:src="@drawable/attendees_icon"/>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:orientation="vertical">
                 <TextView
                     android:id="@+id/detailEventAttendees"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:fontFamily="sans-serif"
                     android:textSize="18sp"
                     tools:text="12 Attendees"/>
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:fontFamily="sans-serif"
                     android:text="Participants"
                     android:textSize="12sp"
                     android:textStyle="bold"/>
             </LinearLayout>
         </LinearLayout>

         <LinearLayout
             android:id="@+id/locationLayout"
             android:layout_width="match_parent"
             android:layout_height="72dp"
             android:background="@drawable/list_item_selector"
             android:clickable="true"
             android:orientation="horizontal">
             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:paddingLeft="16dp"
                 android:paddingRight="16dp"
                 android:src="@drawable/location_icon"/>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:orientation="vertical">
                 <TextView

                     android:id="@+id/detailEventLocation"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:fontFamily="sans-serif"
                     android:textSize="18sp"
                     tools:text="Dallas, Tx"/>
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:fontFamily="sans-serif"
                     android:text="Location"
                     android:textSize="12sp"
                     android:textStyle="bold"/>
             </LinearLayout>
         </LinearLayout>
        </LinearLayout>
         </ScrollView>
         <LinearLayout
             android:id="@+id/durationLayout"
             android:layout_width="match_parent"
             android:layout_height="72dp"
             android:background="@drawable/list_item_selector"
             android:clickable="true"
             android:orientation="horizontal">
             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:paddingLeft="16dp"
                 android:paddingRight="16dp"
                 android:src="@drawable/duration_icon"/>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:orientation="vertical">
                 <TextView
                     android:id="@+id/detailEventDuration"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:fontFamily="sans-serif"
                     android:textSize="18sp"
                     tools:text="3 Hours"/>
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:fontFamily="sans-serif"
                     android:text="Duration"
                     android:textSize="12sp"
                     android:textStyle="bold"/>
             </LinearLayout>
         </LinearLayout>
     </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fabLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_anchor="@id/detailEventDescription"
        app:layout_anchorGravity="bottom|right|end">
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addAttendee"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:clickable="true"
        app:layout="@id/detailEventDescription"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backArrowIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="16dp"
            android:src="@drawable/back_arrow_icon"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/deleteIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:padding="16dp"
                android:src="@drawable/delete_icon"/>
        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
